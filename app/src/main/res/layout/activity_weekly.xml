<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2e7cb"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageCar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/logosuyo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,16:12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />

    <TextView
        android:id="@+id/textCarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALL MENU"
        app:layout_constraintTop_toBottomOf="@+id/imageCar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnNextMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        app:layout_constraintTop_toBottomOf="@+id/textCarName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:onClick="onNextButtonClick" />

    <Button
        android:id="@+id/btnNextWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drink"
        app:layout_constraintTop_toBottomOf="@+id/textCarName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="76dp"
        android:onClick="onNextButtonClick" />

    <Button
        android:id="@+id/btnNextDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snack"
        app:layout_constraintTop_toBottomOf="@+id/textCarName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="146dp"
        android:onClick="onNextButtonClick" />

    <Button
        android:id="@+id/buttonViewCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="viewCart"
        android:text="View Cart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="246dp"
        app:layout_constraintTop_toBottomOf="@+id/textCarName"
        android:layout_below="@id/btnNextWeek"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
